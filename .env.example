# Application
SECRET_KEY=change-me-to-random-string-min-32-chars
DEBUG=false
APP_NAME=nodeo
APP_VERSION=1.0.0

# Server
HOST=0.0.0.0
PORT=8002

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/nodeo

# Redis
REDIS_URL=redis://redis:6379/0

# Ollama (LLaVA)
OLLAMA_HOST=http://192.168.50.248:11434
OLLAMA_MODEL=llava
OLLAMA_TIMEOUT=120

# Nextcloud
NEXTCLOUD_URL=https://nextcloud.lan
NEXTCLOUD_USERNAME=admin
NEXTCLOUD_PASSWORD=change-me
NEXTCLOUD_BASE_PATH=/nodeo

# Cloudflare R2
CLOUDFLARE_R2_ACCOUNT_ID=your-account-id
CLOUDFLARE_R2_ACCESS_KEY_ID=your-access-key
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-secret-key
CLOUDFLARE_R2_BUCKET=nodeo-images
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Cloudflare Stream
CLOUDFLARE_STREAM_ACCOUNT_ID=your-account-id
CLOUDFLARE_STREAM_API_TOKEN=your-api-token

# Storage
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE_MB=100
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif,webp,bmp,tiff
ALLOWED_VIDEO_EXTENSIONS=mp4,mov,avi,mkv,webm

# Processing
MAX_BATCH_SIZE=50
PROCESS_TIMEOUT_SECONDS=300
